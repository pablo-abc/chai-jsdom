{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./typings"],
    "declaration": false
  },
  "include": ["src", "tests"],
  "files": [
    "./typings/chai/index.d.ts",
    "./tests/chai.spec.ts",
    "./typings/testing-library.d.ts"
  ]
}
